<mvc:View
    controllerName="ui5development.controller.HelloPanel"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <Panel id="homePanel" headerText="{i18n>homePanelHeaderText}" class="sapUiResponsiveMargin" width="auto">
        <content>
            <Button id="helloDialogButton" text="{i18n>pressDialogHello}" press=".onOpenDialog" class="myCustomButton" icon="sap-icon://world"/>
            <Button id="helloWorldButton" text="{i18n>pressHelloButtonText}" press=".onSayHelloPress" class="myCustomButton"/>
            <Input id="inputField" value="{/receipent/name}" valueLiveUpdate="true" width="60%"/>
            <FormattedText htmlText="Hello {/receipent/name}!" class="sapUiSmallMargin sapThemeHighlight-asColor myCustomText"/>
        </content>
    </Panel>
</mvc:View>